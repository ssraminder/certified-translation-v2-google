{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "api": ["src/api/index.ts"],
      "api/*": ["src/api/*"],
      "@/*": ["src/*"]
    }
  }
}

